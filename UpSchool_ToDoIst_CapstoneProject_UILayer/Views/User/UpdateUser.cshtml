@model AppUserUpdateDto
@{
    ViewData["Title"] = "UpdateUser";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-body" style="padding-left:280px">
    <div class="row">
        <div class="col-md-6">
            <form method="post">
            <div class="form-group mb-3">
                <label for="simpleinput">Name</label>
                <input type="text" asp-for="Name" class="form-control">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label for="simpleinput">Surname</label>
                <input type="text" asp-for="Surname" class="form-control">
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label for="example-email">Email</label>
                <input type="email" asp-for="Email" class="form-control" placeholder="Email">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label for="example-password">Password</label>
                <input type="password" asp-for="Password" class="form-control" >
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label for="example-password">Confirm Password</label>
                <input type="password" asp-for="ConfirmPassword" class="form-control">
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
                <div class="form-group mb-4">
                    <button class="btn btn-success">Güncelle</button>
                </div>
            </form>
        </div> <!-- /.col -->
      
    </div>
      
          
</div>

